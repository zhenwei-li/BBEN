# 开发环境
online: false       # 线上才验证登录

server:
   port: 8083

logging.config: classpath:log-dev.xml

# 输液看板websocket推送 每隔10秒执行一次
infusion-board:
  cron: 0/10 * * * * *

# 输液看板呼叫websocket推送 每隔10秒执行一次
infusion-call:
  cron: 0/10 * * * * *

#定期删除过期输液提示语音
delete-infusion-board-data:
  #每天凌晨2点触发
  cron: 0 0 2 * * *
  day-count: 2

#定期删除病人呼叫语音
delete-infusion-call-data:
  #每天凌晨1点触发
  cron: 0 0 1 * * *
  day-count: 2

